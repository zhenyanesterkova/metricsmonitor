FROM golang:1.24.1 AS build-stage

WORKDIR /app

COPY ../go.mod ../go.sum ./
RUN go mod download

COPY ../. .
RUN CGO_ENABLED=0 GOOS=linux go build -o ./bin/server ./cmd/server


FROM debian:stable-slim

WORKDIR /app

COPY --from=build-stage /app/bin/server bin/server

ENTRYPOINT ["./bin/server"]